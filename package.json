{
  "name": "imodeljs-testapp",
  "version": "0.0.0",
  "description": "used to test ideas on imodel.js applications",
  "main": "index.js",
  "repository": "https://github.com/tuncb/imodeljs-testapp.git",
  "author": "tunc bahcecioglu <tunc.bahcecioglu@gmail.com>",
  "private": true,
  "scripts": {
    "build": "buildIModelJsModule",
    "start:webserver": "node ./node_modules/@bentley/imodeljs-webserver/lib/webserver.js --port=3000 --resources=./lib/webresources/",
    "start:backend": "node lib/backend/main.js",
    "start:servers": "set NODE_ENV=development&& run-p \"start:webserver\" \"start:backend\"",
    "electron": "electron lib/backend/main.js",
    "clean": "rimraf lib",
    "clean-node_modules": "rimraf node_modules"
  },
  "iModelJs": {
    "buildModule": {
      "type": "application",
      "sourceResources": [
        {
          "source": "./src/**/*.scss",
          "dest": "./lib"
        },
        {
          "source": "./src/**/*.css",
          "dest": "./lib"
        },
        {
          "source": "./public/**/*",
          "dest": "./lib/webresources"
        },
        {
          "source": "./src/frontend/plugins/public/**/*",
          "dest": "./lib/webresources"
        }
      ],
      "webpack": {
        "dest": "./lib/webresources",
        "entry": "./lib/frontend/index.js",
        "bundleName": "main",
        "styleSheets": true,
        "htmlTemplate": "./src/frontend/index.html"
      }
    }
  },
  "dependencies": {
    "@bentley/bentleyjs-core": "0.189.0",
    "@bentley/config-loader": "0.189.0",
    "@bentley/electron-manager": "0.189.0",
    "@bentley/geometry-core": "0.189.0",
    "@bentley/icons-generic-webfont": "^0.0.9",
    "@bentley/imodeljs-backend": "0.189.0",
    "@bentley/imodeljs-clients": "0.189.0",
    "@bentley/imodeljs-clients-backend": "0.189.0",
    "@bentley/imodeljs-common": "0.189.0",
    "@bentley/imodeljs-frontend": "0.189.0",
    "@bentley/imodeljs-i18n": "0.189.0",
    "@bentley/imodeljs-quantity": "0.189.0",
    "@bentley/imodeljs-webserver": "0.189.0",
    "@bentley/presentation-backend": "0.189.0",
    "@bentley/presentation-common": "0.189.0",
    "@bentley/presentation-components": "0.189.0",
    "@bentley/presentation-frontend": "0.189.0",
    "@bentley/presentation-testing": "0.189.0",
    "@bentley/ui-components": "0.189.0",
    "@bentley/ui-core": "0.189.0",
    "@bentley/ui-framework": "0.189.0",
    "@bentley/ui-ninezone": "0.189.0",
    "body-parser": "^1.18",
    "express": "^4",
    "react": "^16.4.2",
    "react-dnd": "^5.0.0",
    "react-dnd-html5-backend": "^5.0.1",
    "react-dom": "^16.4.2",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "terminal-in-react": "^4.3.1"
  },
  "devDependencies": {
    "@bentley/build-tools": "0.189.0",
    "@bentley/webpack-tools": "0.189.0",
    "@types/body-parser": "^1.17",
    "@types/bunyan": "^1.8",
    "@types/chai": "^4.1.7",
    "@types/express": "^4",
    "@types/react": "^16.4.14",
    "@types/react-dom": "16.0.7",
    "chromedriver": "^2.34.1",
    "electron": "^4.0.1",
    "electron-chromedriver": "^3.0.0",
    "env-cmd": "^8.0.2",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2",
    "start-server-and-test": "^1.7.11",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.0"
  },
  "homepage": "http://localhost:3000/",
  "proxy": "http://localhost:5000"
}
